@using GymManager.Web.Model
@model GymManager.Web.Model.MenuViewModel

@{
    var orderedMenuItems = Model.Menu.OrderBy(item => item.Order);
}


<ul class="navbar-nav me-auto mb-2 mb-md-0">

    @foreach(var menuItem in orderedMenuItems)
    {
        @await Html.PartialAsync("~/Views/Shared/Components/AppMenu/_UserMenuItem.cshtml", new UserMenuItemViewModel
        {
            MenuItem = menuItem,
            RootLevel = true,
            CurrentPageName = Model.CurrentPageName
        })
    }
    
</ul>