@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Serilog

@model List<Microsoft.AspNetCore.Identity.IdentityUser>


@section HeaderRight {
    <form class="d-flex" role="search">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
}


<div class="container">
    <h1 class="mt-5">Users</h1>
    <div class="row">
        <div class="col-6">
        </div>
        <div class="col-6">
            <a asp-action="Create" class="btn btn-outline-success float-end">
                <i class="bi bi-person-plus-fill"></i>
            </a>
        </div>
    </div>

    <table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Email</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <th>@user.UserName</th>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="Edit" class="btn btn-outline-warning" asp-route-userId="@user.Id">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a asp-action="Delete" class="btn btn-outline-danger" asp-route-userId="@user.Id">
                            <i class="bi bi-trash"></i>
                        </a>

                    </td>

                </tr>
            }
    </tbody>
</table>
</div>